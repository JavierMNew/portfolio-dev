---
import JAVA from "./icons/Java.astro";
import SQLSERVER from "./icons/SQLServer.astro";

const TAGS = {
  JAVA: {
    name: "Java",
    class: "bg-black text-white",
    icon: JAVA,
  },
  SQLSERVER: {
    name: "SQL Server",
    class: "bg-gray-100 text-neutral-950",
    icon: SQLSERVER,
  },
};

const PROJECTS = [
  {
    title: "English Odyssey - A simple english practice game",
    description:
      "Created from scratch with Java with Maven.It is a simple english game for everyone",
    link: "#",
    github: "https://github.com/JavierMNew/JuegoTrivia",
    image: "/projects/svgl.webp",
    tags: [TAGS.JAVA, TAGS.SQLSERVER],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
